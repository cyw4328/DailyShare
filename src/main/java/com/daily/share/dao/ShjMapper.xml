<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC   "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>

<mapper namespace="com.daily.share.dao.ShjDAO">


	<!-- 리스트 관련 쿼리 -->
	<select id="list" resultType="com.daily.share.dto.ShjDTO">
		SELECT mem_id, mem_name, mem_email, mem_phone, mem_out, mem_san FROM members ORDER BY mem_id
	</select>
	
	<select id="allCount" resultType="int">
		SELECT COUNT (mem_id) FROM members
	</select>


	<!-- 검색기능 쿼리 -->
	<select id="searchList" parameterType="com.daily.share.dto.ShjDTO" resultType="com.daily.share.dto.ShjDTO">
		SELECT * FROM members WHERE delete_yn='N'
		<choose>
			<when test="type !=null and type.equals('id')">
				AND mem_id LIKE CONCAT ('%', #{keyword},'%')
			</when>
			<when test="type !=null and type.equals('name')">
				AND mem_name LIKE CONCAT ('%', #{keyword},'%')
			</when>
		</choose>
	</select>

</mapper>